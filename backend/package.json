        "@nestjs/typeorm": "^7.1.0",
        "bcrypt": "^4.0.1",
        "class-validator": "^0.14.0",
        "multer": "^1.4.2",
        "passport-jwt": "^4.0.0",
        "pg": "^8.2.1",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^6.5.5",
        "typeorm": "^0.2.25",
        "uuid": "^8.1.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^7.0.0",
        "@nestjs/schematics": "^7.0.0",
        "@nestjs/testing": "^7.0.0",
